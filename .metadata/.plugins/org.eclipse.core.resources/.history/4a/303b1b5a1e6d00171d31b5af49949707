myApp.controller( 'loginCtrl',function($scope, $state, loginService)
{
	$scope.isSignIn = function () 
	{
		var user={};
		
		user.email=$scope.email;
		user.password=$scope.password;
		
		var httpObj = loginService.login(user);
		
		httpObj.then(function(response)
		{
